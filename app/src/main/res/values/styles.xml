<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="auth_parent_linear">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/color_gradient</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>

    <style name="auth_child_linear">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/spacing_small_8</item>
        <item name="android:paddingBottom">@dimen/spacing_medial_24</item>
    </style>

    <style name="button_fill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="start_screen_headers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medial_24</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="start_screen_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="profile_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">1dp</item>
    </style>

    <style name="profile_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small_8</item>
        <item name="android:layout_marginRight">@dimen/spacing_small_8</item>
    </style>

</resources>
