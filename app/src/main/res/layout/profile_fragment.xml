<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:id="@+id/frame"
    android:background="@color/hr24_blue"
    android:layout_marginTop="88dp"
    xmlns:android="http://schemas.android.com/apk/res/android">




<android.support.v4.widget.NestedScrollView
    android:id="@+id/sv_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@color/hr24_blue">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:id="@+id/card"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fitsSystemWindows="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:id="@+id/imageView"
                    android:padding="2dp"
                    android:src="@drawable/ic_add_a_photo_black_24dp"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/profile_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/color_gradient_dark"
                    android:visibility="visible"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/photo_placeholder"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_add_a_photo_black_24dp"
                        android:fitsSystemWindows="true"/>
                    <TextView
                        android:id="@+id/add_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_photo"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/spacing_medial_24"/>
                    <LinearLayout
                        android:id="@+id/add_photo_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/spacing_medial_24">
                        <Button
                            android:id="@+id/cam_btn"
                            android:text="@string/from_cam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/hr24_blue"/>
                        <Button
                            android:id="@+id/gal_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/form_gallery"
                            android:textSize="20sp"
                            android:textColor="@color/hr24_blue" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/hr24_blue"
                android:layout_margin="@dimen/spacing_small_8"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">
                <EditText
                    android:id="@+id/name"
                    android:hint="@string/username_hint"
                    style="@style/profile_edittext">
                    <requestFocus/>
                </EditText>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">
                <EditText
                    android:id="@+id/nick"
                    android:hint="@string/nick_hint"
                    android:textColor="@color/gray_light"
                    android:text="@string/nick"
                    style="@style/profile_edittext">

                </EditText>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal_16">
            <EditText
                android:id="@+id/tel"
                android:hint="@string/tel_hint"
                style="@style/profile_edittext"
                android:text="@string/example_number"
                android:textColor="@color/gray_light"
                android:inputType="phone">
            </EditText>

        </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">
                <EditText
                    android:id="@+id/email"
                    style="@style/profile_edittext"
                    android:hint="@string/e_mail_hint"
                    android:inputType="textEmailAddress"
                    android:text="@string/email_default"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@color/gray" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">
                <EditText
                    android:id="@+id/bio"
                    android:lines="3"
                    style="@style/profile_edittext"
                    android:hint="@string/bio_hint"
                    android:text="@string/bio"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@color/gray"
                    android:maxLines="3"
                    android:maxLength="200"/>

            </android.support.design.widget.TextInputLayout>
            <TextView
                style="@style/profile_edittext"
                android:text="@string/skills_hint"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">

                <EditText
                    android:id="@+id/skills"
                    style="@style/profile_edittext"
                    android:text="@string/skills"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@color/gray"
                    android:maxLines="2"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
            style="@style/profile_edittext"
            android:text="@string/languages_hint"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">

                <EditText
                    android:id="@+id/languages"
                    style="@style/profile_edittext"
                    android:hint="@string/lang_hint"
                    android:text="@string/languages"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@color/gray"
                    android:maxLines="2" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                style="@style/profile_edittext"
                android:text="@string/hobby_hint"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">

                <EditText
                    android:id="@+id/hobby"
                    style="@style/profile_edittext"
                    android:hint="@string/hob_hint"
                    android:text="@string/hobby"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@color/gray"
                    android:maxLines="2" />

            </android.support.design.widget.TextInputLayout>
            <View

                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/hr24_blue"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8"/>

            <LinearLayout
                android:id="@+id/job_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jobs"
                    android:textColor="@color/hr24_blue"
                    android:textSize="20sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">


                <EditText
                    android:id="@+id/job_period"
                    style="@style/profile_edittext"
                    android:hint="@string/job_period_hint"
                    android:text="@string/job_period"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@color/gray" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">

                <EditText
                    android:id="@+id/company_title"
                    style="@style/profile_edittext"
                    android:hint="@string/company_title_hint"
                    android:text="@string/company_title"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@color/gray" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">

                <EditText
                    android:id="@+id/job_title"
                    style="@style/profile_edittext"
                    android:hint="@string/job_title_hint"
                    android:text="@string/job_title"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@color/gray" />

            </android.support.design.widget.TextInputLayout>
            <TextView
                style="@style/profile_edittext"
                android:text="@string/jb_duty_hint"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">

                <EditText
                    android:id="@+id/job_duty"
                    style="@style/profile_edittext"
                    android:hint="@string/job_duty_hint"
                    android:text="@string/job_duty"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@color/gray"
                    android:maxLines="2" />

            </android.support.design.widget.TextInputLayout>

            <CheckBox
                android:id="@+id/first_work_chb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small_8"
                android:text="@string/first_work"/>
            <CheckBox
                android:id="@+id/current_work_chb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small_8"
                android:text="@string/current_work"/>
            <Button
                android:id="@+id/job_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/job_add" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/hr24_blue"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/study_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/studies"
                android:textColor="@color/hr24_blue"
                android:textSize="20sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">

                <EditText
                    android:id="@+id/study_title"
                    style="@style/profile_edittext"
                    android:hint="@string/study_title_hint"
                    android:text="@string/study_title"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@color/gray" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">

                <EditText
                    android:id="@+id/study_decription"
                    style="@style/profile_edittext"
                    android:hint="@string/study_description_hint"
                    android:text="@string/study_description"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@color/gray" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">

                <EditText
                    android:id="@+id/rating"
                    style="@style/profile_edittext"
                    android:hint="@string/rating_hint"
                    android:text="@string/rating_period"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@color/gray" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/study_add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/study_add"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/hr24_blue"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8"/>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16">

                <EditText
                    android:id="@+id/achievements"
                    style="@style/profile_edittext"
                    android:hint="@string/achievements_hint"
                    android:text="@string/achievements"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@color/gray" />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/hr24_blue"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8"/>

            <LinearLayout
                android:id="@+id/hidden_layout"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible">
                <Button
                    android:text="@string/create_pdf"
                    android:layout_marginEnd="1dp"
                    style="@style/profile_button" />
            </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>

<LinearLayout
    android:id="@+id/buttonLayout"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <Button
                android:text="@string/create_pdf"
                android:id="@+id/create_pdf_button"
                android:layout_marginEnd="1dp"
                style="@style/profile_button"
                android:visibility="gone"/>
            <Button
                android:text="@string/view"
                android:id="@+id/view"
                style="@style/profile_button"
                android:layout_marginEnd="1dp"
                android:visibility="gone"/>
            <Button
                android:text="@string/share"
                android:id="@+id/share"
                style="@style/profile_button"
                android:visibility="gone"/>





        </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done_black_24dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_right_space"
        android:layout_marginBottom="@dimen/spacing_medium_32"/>


    </android.support.design.widget.CoordinatorLayout>


